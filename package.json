{
  "name": "servor",
  "version": "3.0.5",
  "description": "A dependency free dev server for single page app development",
  "repository": "lukejacksonn/servor",
  "main": "./servor.js",
  "bin": {
    "servor": "./cli.js"
  },
  "keywords": [
    "development",
    "server",
    "node",
    "spa",
    "reload"
  ],
  "scripts": {
    "cleanup": "rm -f servor.key servor.crt",
    "certify": "yarn cleanup && node cli --certify",
    "test": "node cli test",
    "test:secure": "node cli test --secure",
    "certify:test:secure": "yarn certify && yarn test:secure",
    "sudo:certify:test:secure": "sudo yarn certify && yarn test:secure"
  },
  "author": "Luke Jackson <lukejacksonn@gmail.com>",
  "license": "MIT"
}
